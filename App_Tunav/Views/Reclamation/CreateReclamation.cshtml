@model App_Tunav.Models.Reclamation

@{
    ViewData["Title"] = "Add Reclamation";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Add New Reclamation</h2>

    <form asp-action="CreateReclamation" method="post" class="shadow p-4 rounded bg-light">
        @* Display validation messages *@
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label">Date </label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                <input asp-for="Date" class="form-control" type="datetime-local" />
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="lien" class="form-label">Lien</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                <select asp-for="lien" class="form-control" asp-items="ViewBag.Liens">
                    <option value="">Select Lien</option>
                </select>
            </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-plus-circle"></i> Add Reclamation
        </button>
    </form>
</div>

