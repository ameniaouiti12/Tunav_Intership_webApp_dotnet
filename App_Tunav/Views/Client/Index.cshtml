@model List<Client>

@{
    ViewData["Title"] = "Client List";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Clients List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary create-btn" style="width: 200px;">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().ClientId)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <!-- Add other headers as needed -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.ClientId</td>
                        <td>@client.Name</td>
                        <td>@client.Email</td>
                        <!-- Add other properties as needed -->
                        <td>
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-primary btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No clients found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .create-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
    }
</style>
