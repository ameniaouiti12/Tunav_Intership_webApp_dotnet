@model Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-danger">Delete Client</h1>
            <h3>Are you sure you want to delete this client?</h3>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title">Client Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Client Id</dt>
                <dd class="col-sm-9">@Model.ClientId</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <!-- Add other properties as needed -->
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ClientId" />

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger btn-lg" style="width:200px">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                    <a asp-controller="Client" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
    }

    .card-header {
        border-bottom: 2px solid #dc3545; /* Adds a red border to match the delete button */
    }

    .btn-lg {
        font-size: 1.125rem; /* Slightly larger font size */
        padding: 0.75rem 1.5rem; /* Adjust padding for better button size */
    }

    .btn-outline-secondary {
        border-color: #6c757d; /* Match the border color with secondary button */
        color: #6c757d; /* Match the text color with secondary button */
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
</style>
